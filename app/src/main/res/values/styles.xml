          <item name="android:fontFamily">@font/muli</item>
          <item name="android:layout_height">59dp</item>
          <item name="android:paddingStart">15dp</item>
          <item name="android:paddingEnd">15dp</item>
          <item name="android:textColor">@color/color_gray</item>
          <item name="android:textSize">@dimen/_9ssp</item>
          <item name="android:paddingBottom">-2dp</item>
          <item name="android:background">@drawable/round_edittext</item>
      </style>

      <style name="mainAutoCompleteTextView">
          <item name="android:layout_width">match_parent</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:fontFamily">@font/muli</item>
          <item name="android:gravity">center_vertical</item>
          <item name="android:paddingStart">15dp</item>

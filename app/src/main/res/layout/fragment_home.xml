<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isLoadingTV"
            type="java.lang.Boolean" />

        <variable
            name="isLoadingMovie"
            type="java.lang.Boolean" />


    </data>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/toolbar_card"
            style="@style/Widget.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/yellow3"
            app:shapeAppearanceOverlay="@style/Widget.MainToolbar.Corner">

            <LinearLayout
                android:id="@+id/toolbar_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_button"
                    style="@style/Widget.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/dimen8dp"
                    android:rotation="180"
                    app:srcCompat="@drawable/ic_menu" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:text="level"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="@dimen/match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen4dp"
                    android:layout_weight="2"
                    android:gravity="start|center"
                    android:text="up"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                    android:textColor="@color/colorSubText" />

                <ImageView
                    android:id="@+id/search_button"
                    style="@style/Widget.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/dimen8dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_search" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvClothes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="@drawable/rounded_view"
                android:clickable="true"
                android:elevation="4dp"
                android:focusable="true"
                android:maxLines="1"
                android:paddingStart="@dimen/_9sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_9sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/clothes"
                android:textColor="@color/colorText"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/tvElectronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="@drawable/rounded_view"
                android:clickable="true"
                android:elevation="4dp"
                android:focusable="true"
                android:maxLines="1"
                android:paddingStart="@dimen/_9sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_9sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/electronics"
                android:textColor="@color/colorText"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/tvFurniture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:background="@drawable/rounded_view"
                android:elevation="4dp"
                android:maxLines="1"
                android:paddingStart="@dimen/_9sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_9sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/Furniture"
                android:textColor="@color/colorText"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProducts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:padding="@dimen/dimen8dp"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_ver"
            tools:listitem="@layout/item_product" />
    </LinearLayout>
</layout>